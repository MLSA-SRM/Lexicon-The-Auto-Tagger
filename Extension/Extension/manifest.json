{
    "manifest_version": 2,
    "name": "Lexicon",
    "description": "Tag generator for blog editors.",
    "version": "1.0.0",
    "icons": {"16": "design 1.0.0/16.png",
              "48": "design 1.0.0/48.png",
              "128": "design 1.0.0/128.png"},
    "browser_action": {
        "default_icon": "design 1.0.0/128.png",
        "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "http://localhost/*",
      "http://127.0.0.1:5000/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "popup.js"
        ]
      }
    ]
}